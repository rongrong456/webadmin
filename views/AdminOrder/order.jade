extends ../PublicViews/public
block admin
 .mws-panel.grid_8
  .mws-panel-header
    span
      i.icon-table
      |  订单管理
  .mws-panel-body.no-padding
    #DataTables_Table_1_wrapper.dataTables_wrapper(role='grid')
      table#DataTables_Table_1.mws-datatable-fn.mws-table.dataTable(aria-describedby='DataTables_Table_1_info')
        thead
          tr(role='row')
            th.sorting_asc(role='columnheader' tabindex='0' aria-controls='DataTables_Table_1' rowspan='1' colspan='1' aria-sort='ascending' aria-label='Rendering engine: activate to sort column descending' style='width: 122px;') 序号
            th.sorting(role='columnheader' tabindex='0' aria-controls='DataTables_Table_1' rowspan='1' colspan='1' aria-label='Browser: activate to sort column ascending' style='width: 163px;') 订单号
            th.sorting(role='columnheader' tabindex='0' aria-controls='DataTables_Table_1' rowspan='1' colspan='1' aria-label='Platform(s): activate to sort column ascending' style='width: 149px;') 总价格
            th.sorting(role='columnheader' tabindex='0' aria-controls='DataTables_Table_1' rowspan='1' colspan='1' aria-label='Platform(s): activate to sort column ascending' style='width: 149px;') 购买会员
            th.sorting(role='columnheader' tabindex='0' aria-controls='DataTables_Table_1' rowspan='1' colspan='1' aria-label='Engine version: activate to sort column ascending' style='width: 103px;') 操作
        tbody(role='alert' aria-live='polite' aria-relevant='all')
        -for(var i=0;i<data.length;i++)
          tr.odd
            td.sorting_1 #{data[i].id}
            td.Firefox #{data[i].order_num}
            td.Win #{data[i].food_totalprice}
            td.Win #{data[i].username}
            td
              a(href="/orderinfo?id=#{data[i].id}" class="btn btn-success") 订单详情  

block title 
    | 后台订单管理