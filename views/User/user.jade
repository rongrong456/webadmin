extends ../PublicViews/public
block admin
 .mws-panel.grid_8
  .mws-panel-header
    span
      i.icon-table
      |  会员管理
  .mws-panel-body.no-padding
    #DataTables_Table_1_wrapper.dataTables_wrapper(role='grid')
      #DataTables_Table_1_filter.dataTables_filter
        form(action="/usersearch" method="get") 
            label
                | 搜索名字: 
                input(type='text' aria-controls='DataTables_Table_1' name="keyword")
                input(type="submit" value="搜索")
      table#DataTables_Table_1.mws-datatable-fn.mws-table.dataTable(aria-describedby='DataTables_Table_1_info')
        thead
          tr(role='row')
            th.sorting_asc(role='columnheader' tabindex='0' aria-controls='DataTables_Table_1' rowspan='1' colspan='1' aria-sort='ascending' aria-label='Rendering engine: activate to sort column descending' style='width: 122px;') 序号
            th.sorting(role='columnheader' tabindex='0' aria-controls='DataTables_Table_1' rowspan='1' colspan='1' aria-label='Browser: activate to sort column ascending' style='width: 163px;') 会员名字
            th.sorting(role='columnheader' tabindex='0' aria-controls='DataTables_Table_1' rowspan='1' colspan='1' aria-label='Platform(s): activate to sort column ascending' style='width: 149px;') 会员密码
            th.sorting(role='columnheader' tabindex='0' aria-controls='DataTables_Table_1' rowspan='1' colspan='1' aria-label='Engine version: activate to sort column ascending' style='width: 103px;') 操作
        tbody(role='alert' aria-live='polite' aria-relevant='all')
        -for(var i=0;i<data.length;i++)
          tr.odd
            td.sorting_1 #{data[i].id}
            td.Firefox #{data[i].name}
            td.Win #{data[i].pass}
            td
              a(href="/userinfo?id=#{data[i].id}" class="btn btn-success") 会员详情 
              a(href="/useraddress?name=#{data[i].name}" class="btn btn-danger") 收货地址 

block title 
    | 后台会员管理